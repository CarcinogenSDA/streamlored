# Twitch Configuration
TWITCH_BOT_NICK=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_token_here
TWITCH_CHANNEL=your_channel_name
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret
TWITCH_BOT_ID=0 #https://www.streamweasels.com/tools/convert-twitch-username-to-user-id/
TWITCH_POLL_INTERVAL=60

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_VISION_MODEL=llama3.2-vision 

# Bot Configuration
BOT_PREFIX=!

# Knowledge Base Configuration
KB_PATH=data/knowledge_base.json
KB_ENABLED=true

# Run Mode: "bot", or "local-chat"
RUN_MODE=bot

# Personality (0-3 scale, higher = snarkier)
PERSONALITY_SNARK_LEVEL=2

# OBS WebSocket Configuration
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=your_obs_ws_password
OBS_ENABLED=true

# LiveSplit Plugin Configuration
LIVESPLIT_ENABLED=true
LIVESPLIT_HOST=localhost 
LIVESPLIT_PORT=16834